{
  "name": "misracrules",
  "version": "1.0.0",
  "description": "Code will adapt to MISRA-C rules",
  "main": "webview/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "tsc",
    "vscode:prepublish": "npm run prepublishOnly",
    "compile": "tsc",
    "watch": "tsc -w",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [
    "misracrules",
    "vscode",
    "extension"
  ],
  "author": "Alexandre Santos",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^16.11.15",
