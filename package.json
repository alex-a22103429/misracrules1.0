    "typescript": "^4.9.5"
  },
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.misracrules",
    "onCommand:extension.setApiKey"
